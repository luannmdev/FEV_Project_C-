@model Tuple<ICollection<TeamMember>,int>
@{ 
    Layout = "_Layout";
    ViewData["Title"] = "Task";
}
<div class="main main-raised">
    <div class="profile-content">
        <div class="container">
            <div class="tab-content tab-space">
                <div class="tab-pane active text-center gallery" id="profile">
                    <div class="row">
                        <div class="col-md-5 ml-auto mr-auto">
                            <form class="form" method="post" asp-action="AddTask">
                                <p class="description text-center">Add new Task</p>
                                <div class="card-body">
                                    <div class="input-group row">
                                        <div class="input-group-prepend col-4">
                                            <span class="input-group-text">
                                                Receiver
                                            </span>
                                        </div>
                                        <select name="receiver" style="background-color: transparent;" type="" class="form-control col-auto">
                                            <option value="not choose">Click to choose receiver</option>
                                            @foreach (var m in Model.Item1)
                                            {
                                                <option value="@m.username">@m.username</option>
                                            }
                                        </select>
                                        <!--                                                <input style="background-color: transparent;" type="" class="form-control col-auto" placeholder="vnproben">-->
                                    </div>
                                    <div class="input-group row">
                                        <div class="input-group-prepend col-4">
                                            <span class="input-group-text">
                                                Description
                                            </span>
                                        </div>
                                        <textarea name="description" style="background-color: transparent;" type="text" class="form-control col-auto" placeholder="Description"></textarea>
                                    </div>
                                </div>
                                <style>
                                    ul {
                                        list-style-type: none;
                                    }
                                </style>
                                <div asp-validation-summary="All" style="color:purple"></div>
                                <div class="footer text-center">
                                    <button type="submit" class="btn btn-primary btn-link btn-wd btn-lg">Add</button>
                                    <a asp-action="EventDetail" asp-route-id="@Model.Item2" class="btn btn-primary btn-link btn-wd btn-lg">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>