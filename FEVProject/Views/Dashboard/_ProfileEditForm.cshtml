@model User

<form class="form" method="post" asp-action="EditProfile">
    <p class="description text-center">There are your profile</p>
    <div class="card-body">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">
                    <i class="material-icons">face</i>
                </span>
            </div>
            <input style="background-color: transparent;" type="text" class="form-control" placeholder="Username" value="@Model.username" readonly>
        </div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">
                    <i class="material-icons">contacts</i>
                </span>
            </div>
            <input style="background-color: transparent;" type="text" class="form-control" placeholder="Name" asp-for="fullName">
        </div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">
                    <i class="material-icons">mail_outline</i>
                </span>
            </div>
            <input style="background-color: transparent;" type="text" class="form-control" placeholder="Email" asp-for="email">
        </div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">
                    <i class="material-icons">phonelink_ring</i>
                </span>
            </div>
            <input style="background-color: transparent;" type="text" class="form-control" placeholder="Phone" asp-for="phone">
        </div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">
                    <i class="material-icons">calendar_today</i>
                </span>
            </div>
            <input style="background-color: transparent;" type="date" class="form-control" asp-for="birthdate">
        </div>
    </div>
    <style>
        ul {
            list-style-type: none;
        }
    </style>
    <strong><div asp-validation-summary="All" style="color:purple"></div></strong>
    <div class="footer text-center">
        <button type="submit" class="btn btn-primary btn-link btn-wd btn-lg">Save</button>
        <a asp-action="Profile" class="btn btn-primary btn-link btn-wd btn-lg">Cancel</a>
    </div>
</form>