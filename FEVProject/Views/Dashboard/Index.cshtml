@model IEnumerable<FEVProject.Models.Event>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Dashboard";    
}
<div class="main main-raised">
    <div class="container">        
        <div class="section">
            <div class="row">
                <div class="col-md-12 ml-auto mr-auto text-center">
                    <ul class="nav nav-pills nav-pills-primary justify-content-center" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link" href="#all_event" role="tab" data-toggle="tab">All Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active show" href="#ongoing_event" role="tab" data-toggle="tab">Ongoing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#passed_event" role="tab" data-toggle="tab">Passed</a>
                        </li>
                    </ul>
                    <div class="tab-content tab-space">
                        <div class="tab-pane" id="all_event">
                            <div class="row">
                                @foreach (var p in Model)
                                {
                                    @Html.Partial("_EventTag", p);
                                }
                            </div>
                        </div>
                        <div class="tab-pane active show" id="ongoing_event">
                            <div class="row">
                                @foreach (var p in Model)
                                {
                                    if (!p.done)
                                    {
                                        @Html.Partial("_EventTag", p);
                                    }
                                }
                            </div>
                        </div>
                        <div class="tab-pane" id="passed_event">
                            <div class="row">
                                @foreach (var p in Model)
                                {
                                    if (p.done)
                                    {
                                        @Html.Partial("_EventTag", p);
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="section" style="padding-top: 0px">
